<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3400a3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="615dp"
        android:layout_height="147dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="375dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="420dp"
        android:layout_height="68dp"
        android:layout_marginStart="282dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="256dp"
        android:background="#EBD3D3"
        android:backgroundTint="#FAF3F3"
        android:ems="10"
        android:fontFamily="cursive"
        android:inputType="textEmailAddress"
        android:text="login"
        android:textColor="#010101"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="417dp"
        android:layout_height="61dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="153dp"
        android:background="#F8F1F1"
        android:backgroundTint="#F4E9E9"
        android:ems="10"
        android:fontFamily="cursive"
        android:inputType="textPassword"
        android:text="password"
        android:textColor="#010101"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginStart="334dp"
        android:layout_marginTop="427dp"
        android:layout_marginEnd="302dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="#BC2C9D"
        android:fontFamily="cursive"
        android:text="Sign in"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>